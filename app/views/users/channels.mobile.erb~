          <% if can? :destroy, chan %>
               <br /><%= button_to 'Destroy', chan, confirm: 'Are you sure?', method: :delete  %>
          <% end %>
        </li>
      
    <% else %>

       <li class="arrow">
	 <a href="/channels/<%= chan.id %>/videos">
