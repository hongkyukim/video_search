<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <!--<%= stylesheet_link_tag "/jqtouch/jqtouch.min.css", "/jqtouch/themes/apple/theme.min.css" %>-->
    <!--<%= stylesheet_link_tag "/jqtouch/jqtouch.min.css", "/jqtouch/themes/jqt/theme.min.css" %>-->
    <!-- check "/jqtouch/themes/jqt/theme.min.css" -->
    <%= stylesheet_link_tag  "/jqtouch/jqtouch.min.css", "/jqtouch/themes/apple/theme.css" %>
    <%= javascript_include_tag "/jqtouch/jquery.1.3.2.min.js", "/jqtouch/jqtouch.min.js", "mobile" %>
    <!--<%= javascript_include_tag "/jqtouch/jqtouch.min.js", "mobile" %>-->
   <%= yield(:head) %>
   
    <style type="text/css" media="screen">
         in video, out video {
             display none;
         }
    </style>

  </head>
  <body>
    <div class="current">
      <%- if true -%>
	<!--<%= link_to "All Videos", videos_path %> |
	<%= link_to "Channels", channels_path %>-->
      <div class="toolbar">
        <h1><%=h yield(:title) %></h1>
        <%= link_to "Back", nil, :class => "back" unless current_page? videos_path %>
	<!--<%= link_to "Channels", channels_path, :class => "button flip" %>-->

        <% if mobile_device? %>
          <%= link_to "All Videos", videos_path, :class => "button", :rel => "external" %>
        <% else %>
           <%= link_to "Full Site", videos_path(:mobile => 0), :class => "button", :rel => "external" %>
        <% end %>
        <%= yield(:toolbar) %>
      </div>
      <%- end -%>
      
      <% unless flash.empty? %>
        <div class="info">
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
        </div>
      <% end %>
    
      <%= yield %>
    </div>
  </body>
</html>



