<%= form_for([@user, @channel]) do |f| %>
  <% if @channel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@channel.errors.count, "error") %> prohibited this channel from being saved:</h2>

      <ul>
      <% @channel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :placeholder => "Type several keywords" %>
  </div>

  <% if false %>
     <div class="field">
        <%= f.label :language %> <br />
        <%= f.select :language, Language.all.collect {|p| [ p.name, p.shortname ] }, :include_blank => @cur_language_name %>
     </div>
  <% end %>

<% if user_signed_in? %>
<% if current_user.admin? %>

  <div class="field">
    <%= f.label :channel_type %><br />
    <%= f.text_field :channel_type, :placeholder => "not used" %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags, :placeholder => ":time => :today" %>
  </div>
  <div class="field">
    <%= f.label :categories %><br />
    <%= f.text_field :categories, :placeholder => "Type categories" %>
  </div>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id, :placeholder => current_user.id %>
  </div>

<% end %>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<% if false %>
  <div class="field">
    <%= f.label :language %><br />
    <%= f.select :language,  [['English', 'en'], ['Korean', 'kr'], ['Wookieespeak', 'wk']] %>
  </div>
<% end %>

