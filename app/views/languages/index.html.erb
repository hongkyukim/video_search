<h1>Listing languages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Fullname</th>
    <th>Shortname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.name %></td>
    <td><%= language.fullname %></td>
    <td><%= language.shortname %></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= button_to 'Destroy', language, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

